@model IEnumerable<CompanyViewModel>

@{
    ViewBag.Title = "List of Companies";
}

<h2>List of Companies</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company Name</th>
                <th>Full Address</th>
                @*<th>Country</th>*@
                <!-- Agrega más encabezados de columna según tu modelo CompanyViewModel -->
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Id</td>
                    <td>@company.Name</td>
                    <td>@company.FullAddress</td>
                    @*<td>@company.Country</td>*@
                    <!-- Agrega más columnas según tu modelo CompanyViewModel -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No companies found.</p>
}
